{
  "plugins": [
    "prettier"
  ],
  "extends": [
    "eslint-config-prettier",
    "plugin:prettier/recommended",
    "eslint:recommended",
    "prettier",
    "prettier/standard"
  ],
  "rules": {
    "prettier/prettier": "error",

    "strict": [2, "global"],
    "comma-style": 2,
    "comma-spacing": 2,
    "indent": [2, 2, {
      "SwitchCase": 1,
      "outerIIFEBody": 1,
      "MemberExpression": 1,
      "ArrayExpression": 1,
      "ObjectExpression": 1
    }],
    "quotes": ["error", "single", { "allowTemplateLiterals": false }],
    "linebreak-style": ["error", "unix"],
    "semi": ["error", "always"],
    "semi-spacing": ["error", { "before": false, "after": true }],
    "max-len": ["error", {
      "code": 120,
      "ignoreComments": true,
      "ignoreUrls": true
    }],
    "dot-location": [2, "property"],
    "no-duplicate-imports": [2, { "includeExports": true }],

    "eqeqeq": "error",
    "block-scoped-var": 2,
    "no-constant-condition": 2,
    "no-console": 2,
    "no-debugger": 2,
    "no-lonely-if": 2,
    "no-lone-blocks": 2,
    "no-nested-ternary": 2,
    "no-mixed-spaces-and-tabs": 2,
    "no-dupe-keys": 2,
    "no-extra-boolean-cast": 2,
    "no-irregular-whitespace": 2,
    "no-multi-spaces": 2,
    "no-multiple-empty-lines": 2,
    "no-else-return": 0,
    "no-eval": 2,
    "no-multi-str": 2,
    "no-self-compare": 2,
    "no-useless-call": 2,
    "no-shadow-restricted-names": 2,
    "no-shadow": 2,
    "no-trailing-spaces": 2,
    "no-undef": 2,
    "no-undef-init": 2,
    "no-unreachable": 2,
    "no-unused-vars": 2,
    "no-use-before-define": 2,
    "no-extra-semi": 2,

    "keyword-spacing": 2,
    "space-before-blocks": 2,
    "space-before-function-paren": "off",
    "space-infix-ops": 2,
    "space-unary-ops": 2,

    "radix": 2,
    "curly": 2,
    "no-fallthrough": 0,
    "default-case": 0,
    "no-plusplus": 0,
    "dot-notation": 0,
    "eol-last": 2,

    "max-lines": ["error", { "max": 120 }],
    "comma-dangle": ["error", "always-multiline", {
      "arrays": "never",
      "objects": "always",
      "imports": "never",
      "exports": "always",
      "functions": "never"
    }],
    "no-var": 2,
    "no-new": 2,
    "camelcase": ["error",
      {
        "properties": "always",
        "allow": ["^UNSAFE_"]
      }
    ],
    "sort-keys": "off"
  }
}
